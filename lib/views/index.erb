<html>
  <head>
    <title> The Gossip Project </title>
  </head>
  <body>
    <h1> Mon supersite de Gossip </h1>

    <% gossips.each_with_index do |gossip, index| %>
      <p>
      <%= gossip.author %>
      <br/>
      <%= gossip.content %>
      <br/>
      <a href="gossips/<%=index%>/">View this gossip</a>
      </p>
    <% end %>

    <a href="/gossips/new/">Make a gossip</a>
  </body>
</html>